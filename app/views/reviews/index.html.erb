<p id="notice"><%= notice %></p>

<h1><%= @rental.name %></h1>

<h1>Listing Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.user.full_name %></td>
        <td><%= review.content %></td>
        <td><%= link_to 'Show', [review.rental.user, review.rental, review] %></td>
        <td><%= link_to 'Edit', edit_user_rental_review_path(review.rental.user, review.rental, review) %></td>
        <td><%= link_to 'Destroy', [review.rental.user, review.rental, review], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_user_rental_review_path %> |
<%= link_to 'Back to rental', user_rental_path(@rental.user, @rental) %>
